{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "$schema": "core/lerna/schemas/lerna-schema.json",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com",
      "allowBranch": "any"
    },
    "version": {
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): %s"
    }
  },
  "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"]
}
