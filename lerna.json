{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "$schema": "core/lerna/schemas/lerna-schema.json",
  "command": {
    "publish": {
    },
    "version": {
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): %s"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ]
}
